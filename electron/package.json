{
  "name": "react-context-devtool-electron",
  "version": "1.0.0",
  "description": "Standalone Electron version of React Context DevTool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:dev": "webpack --config webpack.renderer.config.js --mode development",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.reactcontextdevtool.electron",
    "productName": "React Context DevTool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^7.1.1",
    "style-loader": "^4.0.0",
    "sass-loader": "^14.2.1",
    "sass": "^1.77.1",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}